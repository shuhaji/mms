<odoo>
  <data>

        <record model="ir.ui.view" id="view_company_form_hotel_id">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <!--<xpath expr="//sheet/notebook/page/group[1]" position="after">-->

                    <notebook colspan="4">
                        <page string="Hotel Information">
                           <group>
                                <group>
                                    <field name="hotel_id"/>
                                    <field name="branch_id_myvalue"/>
                                    <field name="general_manager"/>
                                    <field name="accounting_manager"/>
                                    <field name="book_keeper"/>
                                    <field name="general_cashier"/>
                                </group>
                                <group>
                                    <field name="account_receivable"/>
                                    <field name="account_payable"/>
                                    <field name="cost_control"/>
                                    <field name="purchasing"/>
                                    <field name="store_keeper"/>
                                </group>
                                <group name="employee_title"/>
