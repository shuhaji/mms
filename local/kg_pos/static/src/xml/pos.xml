<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_custom_extended" inherit_id="point_of_sale.template" xml:space="preserve">
    <t t-name="PosTicket">
        <div class="kg_report_view_pos_bill_div_class" style="width:100%">
            <div id='kg_report_view_pos_bill_content' style='width:100%'  />
            <t t-if="showKgReportViewer">
                <span class='button reload_report'  id="reload_report_button">
                    Reload Report
                </span>
                <!--<span class='button reload_report2' id="reload_report_button2">-->
                    <!--Reload Report 285-->
                <!--</span>-->
            </t>
        </div>

        <t t-if="!showKgReportViewer">
            <t t-set="column_count" t-value="widget.pos.config.receipt_column_count"/>
            <t t-if="column_count == '2'">
                <t t-set="style_sale_ticket" t-value="'width:230mm'" />
                <t t-set="cols_list" t-value="[1, 2]" />
                <t t-set="column_count" t-value="2"/>
            </t>
            <t t-else="">
                <t t-set="column_count" t-value="1"/>
                <t t-set="style_sale_ticket" t-value="'width:105mm'" />
                <t t-set="cols_list" t-value="[1, ]" />
            </t>
            <div class="pos-sale-ticket" t-att-style="style_sale_ticket">
            <div style="display: table;">
                <t t-foreach="cols_list" t-as="column_idx">
                    <t t-set="report_page_no" t-value="1"/>
                    <t t-if="column_idx == 2">
                        <!-- set style utk kolom kanan -->
                        <t t-set="style" t-value="'display: table-cell;width:105mm;'" />
                        <!-- tambahkan kolom tengah jika display ada 2 -->
                        <div id="middle-col" style="display: table-cell;width:50mm;"></div>
                    </t>
                    <t t-else="">
                        <!-- set style utk kolom kiri (default) -->
                        <t t-set="style" t-value="'display: table-cell;width:105mm;'" />
                    </t>
                    <div t-att-style="style" id="sale-ticket-column-layout">
                        <div class="pos-sale-ticket-container">
                            <div class="pos-sale-ticket-header pos-sale-ticket-header-repeat-each-page"
                                 id="pos-receipt-header">
                                <t t-if='receipt.company.logo'>
                                    <img t-att-src='receipt.company.logo'
                                         style="float:right;width:40mm;height:40px"/>
                                    <div style="clear:both;"/>
                                </t>
                                <!--<span style="font-size:18px;font-weight:bold;"><t t-esc="widget.pos.config.name"/></span>-->
                                <div style="text-align:right;"><strong><span t-esc="widget.pos.company.name"/></strong></div><br />
                                <div class="receipt-user">
                                    <div style="display: grid;grid-template-columns: 1fr 1fr;grid-template-rows: auto;">
                                        <div>
                                            <!--kolom kiri-->
                                            <t t-esc="widget.pos.get_cashier().name"/><br />
                                            <t t-esc="widget.pos.config.name"/><br />
                                            <t t-esc="order.name"/><br/>
                                        </div>
                                        <div style="text-align: right">
                                            <!--kolom kanan-->
                                            <t t-if="order.waiter">
                                                <div style="text-align:right;"><span t-esc="order.waiter.name"/></div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="pos-sale-ticket-content" id="pos-receipt-content">
                                <table class='receipt-orderlines'>
                                    <colgroup>
                                        <col width='4%' />
                                        <col width='24%' />
                                        <col width='3%' />
                                        <col width='3%' />
                                        <col width='21%' />
                                        <col width='12%' />
                                        <col width='34%' />
                                    </colgroup>
                                    <tr style="border-top:1px solid black;border-bottom:1px solid black;">
                                        <!--table order lines - header - nama2 kolom-->
                                        <td colspan="3">
                                            TBL <t t-if="widget.pos.table"><t t-esc="widget.pos.table.name"/></t>
                                        </td>
                                        <td style="text-align:center;">
                                            <t t-if="order.is_hotel_guest">
                                                <div> 1 </div>
                                            </t>
                                            <t t-else="">
                                                <div> 0 </div>
                                            </t>
                                        </td>
                                        <td style="text-align:center;" colspan="1">
                                            <div> <t t-esc="pos.get_order().customer_count"/> </div>
                                        </td>
                                        <td colspan="2" style="text-align:right;">
                                            <!--<t t-esc="order.formatted_validation_date"/>-->
                                            <t t-esc="moment(order.validation_date).format('DD MMM YYYY HH:mm:ss')"/>
                                        </td>
                                    </tr>
                                    <t t-set="kg_total_qty" t-value="0"/>
                                    <t t-set="row_count" t-value="orderlines.length"/>
                                    <t t-set="row_number" t-value="1"/>
                                    <t t-foreach="orderlines" t-as="orderline">
                                        <tr>
                                            <td></td>
                                            <td colspan="5">
                                                <t t-esc="orderline.get_quantity()"/>
                                                <t t-esc="orderline.get_display_name()"/>
                                                <!-- - <t t-esc="row_number"/> - <t t-esc="row_count"/>-->
                                                <t t-set="kg_total_qty" t-value="kg_total_qty+orderline.get_quantity()"/>
                                            </td>
                                            <td style="text-align:right;">
                                                <!--line sub total after discount-->
                                                <!--<t t-esc="widget.format_currency(orderline.get_display_price())"/>-->
                                                <!--line sub total before discount and before tax/service-->
                                                <t t-set="line_all_prices" t-value="orderline.get_all_prices()"/>
                                                <t t-esc="widget.format_currency(line_all_prices.bruttoBeforeTax)"/>
                                            </td>
                                        </tr>
                                        <t t-set="page_break_height" t-value="0"/>
                                        <t t-if="row_number &gt; 21 and row_number == row_count and row_count &lt; 40">
                                            <!--siapkan blok utk page break di print out-->
                                            <!--tinggi perbaris normal = 3.7mm-->
                                            <!--jumlah baris maksimal dalam 1 halaman = 40 + 1 header-->
                                            <!--jlh baris tersisa = jlh baris maksimal - row number + 1-->
                                            <!--tinggi_baris_kosong_bawah = 20mm-->
                                            <!--tinggi header halaman berikutnya = 35-->
                                            <!--tinggi baris kosong =  (tinggi perbaris * jlh baris tersisa) + tinggi_baris_kosong_bawah + tinggi header-->
                                            <t t-set="page_break_height" t-value="(3.7 * ((40+1)-row_number+1)) + 20 + 35"/>
                                        </t>
                                        <t t-if="row_number &gt; 40 and row_count &gt; 40">
                                            <!--siapkan blok utk page break di print out-->
                                            <t t-set="page_break_height" t-value="20 + 35"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set="row_number" t-value="row_number+1"/>
                                        </t>
                                        <t t-if="page_break_height &gt; 0">
                                            <!--ganti halaman, set page no baru, dan reset row count-->
                                            <t t-set="row_count" t-value="row_count - row_number + 1"/>
                                            <t t-set="row_number" t-value="1"/>
                                            <!--bikin blok display kosong utk pindah halaman, -->
                                            <!--akan sembunyi di html dan hanya muncul di print out -->
                                            <t t-set="style_page_break_height"
                                               t-value="'height: ' + page_break_height + 'mm;border-top:1px solid black;border-bottom:1px solid black;'"/>
                                            <tr><td colspan="7">
                                                <div class="pos-sale-ticket-page-break show-in-print-only"
                                                     t-att-style="style_page_break_height">
                                                    <span>Page: <t t-esc="report_page_no"/><br/></span>
                                                </div>
                                                </td></tr>

                                            <t t-set="report_page_no" t-value="report_page_no + 1"/>
                                        </t>
                                    </t>
                                </table>
                                <br />
                                <t t-set="all_order_totals" t-value="order.get_all_order_totals()"/>
                                <table class='receipt-total'>
                                    <!--<tr>-->
                                        <!--<td>BRUTO </td>-->
                                        <!--<td style="text-align:left;"><span> : </span></td>-->
                                        <!--<td style="text-align:center;"></td>-->
                                        <!--<td class="pos-right-align">-->
                                            <!--<t t-esc="widget.format_currency(order.get_total_discount() + order.get_total_without_tax())"/>-->
                                        <!--</td>-->
                                    <!--</tr>-->
                                    <tr>
                                        <td>DISCOUNT </td>
                                        <td style="text-align:left;"><span> : </span></td>
                                        <td style="text-align:center;">  </td>
                                        <td class="pos-right-align">
                                            <t t-esc="widget.format_currency(all_order_totals.totalDiscAmountBeforeTax)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>SUBTOTAL </td>
                                        <td style="text-align:left;"><span> : </span></td>
                                        <td style="text-align:center;">  <t t-esc="kg_total_qty"/> </td>
                                        <td class="pos-right-align">
                                            <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                                        </td>
                                    </tr>
                                    <t t-if="order.get_paymentlines().length">
                                        <t t-if="(order.get_paymentlines()[0].cashregister.journal.is_officer_check or order.get_paymentlines()[0].cashregister.journal.is_department_expense) == false ">
                                            <tr>
                                                <td>SERVICE </td>
                                                <td style="text-align:left;"><span> : </span></td>
                                                <td style="text-align:center;"> </td>
                                                <td class="pos-right-align">
                                                    <t t-esc="widget.format_currency(all_order_totals.totalServiceAmount)"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>TAX </td>
                                                <td style="text-align:left;"><span> : </span></td>
                                                <td style="text-align:center;">  </td>
                                                <td class="pos-right-align">
                                                    <t t-esc="widget.format_currency(all_order_totals.totalTaxWithoutService)"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <div class="original-code-info">
                                    <!-- original code -->
                                    <!-- <tr>
                                        <td>SERVICE &amp; TAX </td>
                                        <td style="text-align:left;"> : </td>
                                        <td class="pos-right-align">
                                            <t t-esc="widget.format_currency(order.get_total_tax())" />
                                        </td>
                                    </tr> -->
                                    <!-- end of original code -->

                                    <!-- custom code by andi -->
                                    <!--<t t-if="order.get_paymentlines().length">-->
                                        <!--<t t-if="(order.get_paymentlines()[0].cashregister.journal.is_officer_check or order.get_paymentlines()[0].cashregister.journal.is_department_expense) == false ">-->
                                            <!--<t t-if="order.get_list_of_taxes()">-->
                                                <!--<t t-if="order.get_list_of_taxes().length">-->
                                                    <!--<tr t-foreach="order.get_list_of_taxes()" t-as="tax">-->
                                                        <!--<td>-->
                                                            <!--<span t-esc="tax.tax_name"/>-->
                                                        <!--</td>-->
                                                        <!--<td style="text-align:left;">-->
                                                            <!--<span> : </span>-->
                                                        <!--</td>-->
                                                        <!--<td style="text-align:left;"> </td>-->
                                                        <!--<td class="pos-right-align">-->
                                                            <!--<span t-esc="widget.format_currency(tax.tax_amount)"/>-->
                                                        <!--</td>-->
                                                    <!--</tr>-->
                                                <!--</t>-->
                                            <!--</t>-->
                                        <!--</t>-->
                                    <!--</t>-->
                                    </div>
                                    <!-- end of custom code by andi -->

                                    <tr>
                                        <td>TOTAL </td>
                                        <td style="text-align:left;"> : </td>
                                        <td style="text-align:left;"> </td>
                                        <td class="pos-right-align">
                                            <t t-esc="widget.format_currency(order.get_new_total())"/>
                                        </td>
                                    </tr>
                                </table>
                                <br />
                                <table class='receipt-paymentlines'>
                                    <t t-foreach="paymentlines" t-as="line">
                                      <tr>
                                          <td>
                                              *** <t t-esc="line.name"/> ***
                                          </td>
                                          <td class="pos-right-align">
                                              <t t-esc="widget.format_currency(line.get_new_amount())"/>
                                          </td>
                                      </tr>
                                    </t>
                                </table>
                                <table class='receipt-paymenchange'>
                                    <t t-if="order.get_change()">
                                        <tr>
                                            <td>
                                                *** Change ***
                                            </td>
                                            <td class="pos-right-align">
                                                <t t-esc="widget.format_currency(order.get_change())"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>

                            </div>
                            <div class="footer pos-sale-ticket-footer">
                                <div style="border:1px solid black;height:35mm;">
                                    <div style="width:58%; height:33mm;float:left;padding:1mm;border-right:1px solid black;">
                                        <p style="font-size:55%;">
                                            Dengan ini saya menyatakan bahwa saya akan membayar biaya yang timbul bilamana perusahaan atau perorangan yang disebuatkan diatas tidak bersedia membayar sebagaian atau seluruh biaya ini. <br/> <br/>

