<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SecurityPinPopup">
        <div class="modal-dialog">
            <div class="popup popup-noref">
                <p class="title"><t t-esc=" widget.options.title || '' " /></p>
                <div class="container">
                    <div class="field">
                        <input style="margin-top:25px" id="pin" class="form-control" type="password" t-att-value="widget.no_reference || ''" />
                    </div>
                </div>
                <div class="footer">
                    <div class="button confirm">
                        Ok
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
