                        <!--<br/>-->
                    <!--</div>-->
                <!--</div>-->

                <div class="row">
                    <div class="col-xs-6 text-center">
                        <div class="col-xs-3"/>
                        <div class="col-xs-6" style="border-top:1px solid black">
                            <span>Accounting Manager</span>
                        </div>
                        <div class="col-xs-3"/>
                    </div>
                    <div class="col-xs-6 text-center">
                        <div class="col-xs-3"/>
                        <div class="col-xs-6" style="border-top:1px solid black">
                            <span>Accounting Receivable</span>
                        </div>
                        <div class="col-xs-3"/>
                    </div>
                </div>
            </div>
        </template>

    </data>
</openerp>
